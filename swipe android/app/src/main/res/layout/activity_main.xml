<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tela"
    tools:context=".MainActivity"
    android:backgroundTint="#CAC8C8"
    android:background="#000">

    <TextView
        android:id="@+id/tvSwipe"
        android:layout_width="315dp"
        android:layout_height="311dp"
        android:text="Para jogar, basta deslizar o dedo para baixo: Sim ou para cima: Não"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <Button
        android:id="@+id/btnReinicia"
        android:layout_width="109dp"
        android:layout_height="49dp"
        android:onClick="reinicia"
        android:text="Recomeçar"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSwipe"
        app:layout_constraintVertical_bias="0.592" />

    <TextView
        android:id="@+id/tvNumero"
        android:layout_width="315dp"
        android:layout_height="56dp"
        android:gravity="right"
        android:text=""
        android:textColor="#ff0000"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tvSwipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.656"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.826" />

    <TextView
        android:id="@+id/tvRespondida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#ff0000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSwipe"
        app:layout_constraintVertical_bias="0.562" />

    <TextView
        android:id="@+id/tvResp"
        android:layout_width="69dp"
        android:layout_height="33dp"
        android:text=""
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnReinicia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toEndOf="@+id/tvRespondida"
        app:layout_constraintTop_toBottomOf="@+id/tvSwipe"
        app:layout_constraintVertical_bias="0.269"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>